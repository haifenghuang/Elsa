use "std/io";
use "std/assert";

fn main() {
	//var f = OpenFile("examples\bouncy\assets\asset.bmp", FileMode::Read);
	//
	//var buffer = new byte[];
	//var read = ReadFile(f, buffer, 54);
	//PrintLn(buffer[0]);
	//PrintLn(buffer[1]);
	//PrintLn(read);

	// Left
	var x = 0xFFFF;
	x = x << 1;
	AssertEq(131070, x);
	x = x << 1;
	AssertEq(262140, x);
	x = x << 1;
	AssertEq(524280, x);
	x = x << 1;
	AssertEq(1048560, x);
	x = x << 1;
	AssertEq(2097120, x);


	// Right
	x = 0xFFFF

	x = x >> 1;
	AssertEq(32767, x);
	x = x >> 1;
	AssertEq(16383, x);
	x = x >> 1;
	AssertEq(8191, x);
	x = x >> 1;
	AssertEq(4095, x);
	x = x >> 1;
	AssertEq(2047, x);
	x = x >> 1;
	AssertEq(1023, x);
	x = x >> 1;
	AssertEq(511, x);
	x = x >> 1;
	AssertEq(255, x);
	x = x >> 1;
	AssertEq(127, x);

	// Merge

	byte x1 = 0xFF;
    byte y1 = 0xFF;
    AssertEq(65535, (int(x1) << 8) | int(y1));

	var x2 = 0x00AA;
    var y2 = 0x5500;
    AssertEq(0xAA55, (x2 << 8) + (y2 >> 8));


	// Bitwise
	AssertEq(0xFF, 0xFF | 0xFF);
	AssertEq(0xFF, 0xFF & 0xFF);
	AssertEq(0, 0xFF & 0);
	AssertEq(0xFF, 0xFF | 0);
}