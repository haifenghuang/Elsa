import "examples/pong/paddle";

func void update(Paddle p, int height)
{
	if (p.y < 0)
	{
		p.y = 0;
		p.vel_y = 10;
	}

	if (p.y > height)
	{
		p.y = height;
		p.vel_y = -10;
	}

	p.y = p.y + p.vel_y;
}

func int main()
{
	var height = 600;
	var width = 800;
	
	var left_paddle = create_paddle(0, 0, 20, 100);
	var right_paddle = create_paddle(0, 0, 20, 100);

	left_paddle.vel_y = 1;

	loop(true)
	{
		update(left_paddle, height);

		elsa.PrintLn(left_paddle.y);
	}

	return 0;
}